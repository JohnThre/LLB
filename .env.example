# =============================================================================
# LLB Environment Configuration
# Copy this file to .env and update with your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-change-this-in-production

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL (Production)
DATABASE_URL=postgresql://llb_user:your_password@localhost:5432/llb_db

# SQLite (Development - uncomment to use)
# DATABASE_URL=sqlite:///./llb.db

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# AI Provider API Keys (Optional - for fallback)
# -----------------------------------------------------------------------------
# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-haiku-20240307

# Google Gemini
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-pro

# Ollama (Local)
OLLAMA_ENABLED=false
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# -----------------------------------------------------------------------------
# Local AI Configuration
# -----------------------------------------------------------------------------
# Primary model (Gemma 3 1B)
GEMMA_MODEL_PATH=./models/gemma-3-1b
WHISPER_MODEL_PATH=./models/whisper
WHISPER_MODEL_SIZE=base

# Model settings
MAX_TOKENS=1024
TEMPERATURE=0.7
TOP_P=0.9

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=50485760  # 50MB
ALLOWED_EXTENSIONS=pdf,doc,docx,txt,mp3,wav,ogg,m4a

# -----------------------------------------------------------------------------
# Security Settings
# -----------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1
SESSION_TIMEOUT=3600  # 1 hour
JWT_EXPIRATION=86400  # 24 hours

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_VOICE_INPUT=true
ENABLE_DOCUMENT_UPLOAD=true
ENABLE_REAL_TIME_CHAT=true
ENABLE_ANALYTICS=false

# -----------------------------------------------------------------------------
# Monitoring & Logging
# -----------------------------------------------------------------------------
LOG_FILE=./logs/app.log
ERROR_LOG_FILE=./logs/error.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# -----------------------------------------------------------------------------
# Email Configuration (Optional)
# -----------------------------------------------------------------------------
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@llb.local

# -----------------------------------------------------------------------------
# Development Settings
# -----------------------------------------------------------------------------
DEV_MODE=true
HOT_RELOAD=true
AUTO_RELOAD=true
DEBUG_SQL=false