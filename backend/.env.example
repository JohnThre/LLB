# Backend Environment Configuration

# Application Settings
LLB_ENVIRONMENT=development
LLB_DEBUG=true
LLB_HOST=127.0.0.1
LLB_PORT=8000

# AI Provider API Keys (configure at least one)
LLB_OPENAI_API_KEY=your_openai_api_key_here
LLB_ANTHROPIC_API_KEY=your_anthropic_api_key_here
LLB_GOOGLE_API_KEY=your_google_api_key_here

# AI Provider Models
LLB_OPENAI_MODEL=gpt-3.5-turbo
LLB_CLAUDE_MODEL=claude-3-haiku-20240307
LLB_GEMINI_MODEL=gemini-pro

# Local AI Options
LLB_OLLAMA_ENABLED=false
LLB_OLLAMA_BASE_URL=http://localhost:11434
LLB_OLLAMA_MODEL=llama2
LLB_CHROME_WEB_AI_ENABLED=false

# Language Support
LLB_SUPPORTED_LANGUAGES=en,zh-CN

# Security
LLB_SECRET_KEY=your-secret-key-change-in-production

# Database
LLB_DATABASE_URL=sqlite:///./llb.db

# CORS
LLB_CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LLB_LOG_LEVEL=INFO